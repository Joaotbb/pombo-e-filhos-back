generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("MYSQL_URI")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String?
  address   String?
  email     String    @unique
  password  String
  created_at DateTime  @default(now())
  updated_at DateTime?
  deleted_at DateTime?
  isAdmin   Boolean   @default(false)
}
